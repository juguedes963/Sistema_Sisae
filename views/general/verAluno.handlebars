<div class="container">
	
	<h1 class="text-center my-4">Ficha do Aluno</h1>
	
	{{#data}}

	<div class="card card-aluno text-center mb-3">
		<div class="card-body text-secondary">
			<img src="/uploads/{{foto}}" class="mb-2" title="Foto do Estudante">
			<h5 class="card-title">{{nome}}</h5>
			<p class="lead">{{codigo}}</p>
			<p class="card-text">Nº de matrícula: {{matricula}}</p>	
			<small>Registrado em: {{#formatDate entrada}}{{/formatDate}}</small>
			<hr>
			<a href="" class="btn btn-primary"><i class="fa fa-plus mr-2"></i> Ver Mais </a>
		</div>
	</div>
		
	
		  
	{{/data}}
					
</div>