<div class="container">
	<h1 class="text-center my-4">Cadastrar novo Artigo</h1>

	{{#each erros}}
		{{>_error}}
	{{else}}
	{{/each}}

	<div class="card bg-light">
		<div class="card-body">
			<form action="artigos/add" method="POST">

				<div class="form-group">
					<label for="artigo">Artigo:</label>
					<input type="number" id="numero" name="numero" placeholder="NÃºmero do Artigo" class="form-control" autocomplete="off" min="1" required>
				</div>

				<div class="form-group">
					<label for="artigo">Texto:</label>
					<textarea type="text" id="texto" name="texto" placeholder="Texto do Artigo" class="form-control" autocomplete="off" required></textarea>
				</div>

				<button type="submit" class="btn btn-success mt-4"><i class="fa fa-check mr-2"></i>Cadastrar Artigo</button>
				<a href="/admin/artigos/ver" class="btn btn-info mt-4"><i class="fa fa-search mr-2"></i>Ver Artigos</a>
			</form>
		</div>
	</div>
	
</div>